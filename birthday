    <div class="controls">
      <button id="prevBtn" class="secondary" aria-label="Previous page">‚Üê Prev</button>
      <button id="nextBtn" aria-label="Next page">Next ‚Üí</button>
    </div>
  </div>

  <script>
    const book = document.getElementById('book');
    const pagesLeft = Array.from(book.querySelectorAll('.page.left'));
    const pagesRight = Array.from(book.querySelectorAll('.page.right'));
    let index = 0;
    let musicStarted = false;
    let confettiThrown = false;

    function render(){
      pagesLeft.forEach((pg, i)=> pg.classList.toggle('flipped', i < index));
      pagesRight.forEach((pg, i)=> pg.classList.toggle('flipped', i < index));
      prevBtn.disabled = index === 0;
      nextBtn.disabled = index === pagesLeft.length;
    }

    function next(){
      if(index < pagesLeft.length){
        index++;
        render();
        if(index === pagesLeft.length && !confettiThrown){
          throwConfetti();
          playMusic();
          confettiThrown = true;
        }
      }
      book.style.filter = 'drop-shadow(0 40px 50px rgba(17,24,39,.22))';
      setTimeout(()=> book.style.filter = 'drop-shadow(0 30px 40px rgba(17,24,39,.18))', 250);
    }

    function prev(){
      if(index > 0){ index--; render(); }
    }

    function playMusic(){
      if(!musicStarted){
        document.getElementById("bg-music").play();
        musicStarted = true;
      }
    }

    book.addEventListener('click', (e)=>{
      const rect = book.getBoundingClientRect();
      const isRight = (e.clientX - rect.left) > rect.width/2;
      isRight ? next() : prev();
    });

    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    prevBtn.addEventListener('click', (e)=>{ e.stopPropagation(); prev(); });
    nextBtn.addEventListener('click', (e)=>{ e.stopPropagation(); next(); });

    window.addEventListener('keydown', (e)=>{
      if(e.key === 'ArrowRight') next();
      if(e.key === 'ArrowLeft') prev();
    });

    function throwConfetti(){
      const confetti = document.getElementById('confetti');
      const pieces = 80;
      for(let i=0;i<pieces;i++){
        const s = document.createElement('span');
        s.style.left = Math.random()*100 + 'vw';
        s.style.width = 6 + Math.random()*8 + 'px';
        s.style.height = 8 + Math.random()*10 + 'px';
        s.style.opacity = .6 + Math.random()*0.4;
        s.style.background = `hsl(${Math.random()*360}, 90%, 60%)`;
        s.style.animationDelay = (Math.random()*0.6)+'s';
        confetti.appendChild(s);
        setTimeout(()=> s.remove(), 3200);
      }
    }

    render();
  </script>
